<br><br>
<h2><%= t('.sign_up') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :profile_image %>
    <%= f.file_field :profile_image, autofocus: true, autocomplete: "profile_image" %>
  </div>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "user", placeholder: "Your name", class:"input-field" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email Address", class:"input-field" %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password（6文字以上）", class:"input-field" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認用 Password", class:"input-field" %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.select :address, User.addresses.keys, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :teeth_type %>
    <%= f.select :teeth_type, User.teeth_types.keys,autofocus: true, autocomplete: "teeth_type" %>
  </div>

  <div class="field">
    <%= f.label :orthodontics_type %>
    <%= f.select :orthodontics_type, User.orthodontics_types.keys, autofocus: true, autocomplete: "orthodontics_type" %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up'), class:"action-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
