<div class="article">
  <h1>ブックマーク一覧</h1>
  <div class="uk-grid-match uk-child-width-1-3@m" uk-grid>
    <% @bookmarks.each do |bookmark| %>
    <div>
      <div class="uk-card uk-card-default uk-box-shadow-medium">
        <div class="uk-card-header">
          <div class="uk-grid-small uk-flex-middle" uk-grid>
            <div class="uk-width-auto">
              <% if bookmark.blog.user.profile_image.attached? %>
              <p><%= image_tag bookmark.blog.user.profile_image, class:"uk-border-circle", width:"70",height:"70" %></p>
              <% else %>
              <p><%= image_tag "defalt_profile_image.png", class:"uk-border-circle", width:"70",height:"70" %></p>
              <% end %>
            </div>
            <div class="uk-width-expand uk-grid-divider" uk-grid>
              <div class="center">
                <h3 class="uk-card-title uk-margin-remove-bottom"><%= link_to bookmark.blog.user.name, user_path(bookmark.blog.user.id) %></h3>
                <p class="uk-text-meta uk-margin-remove-top"><%= bookmark.blog.updated_at.to_date %></p>
              </div>
              <div class="uk-text-left">
                <p class="uk-text-meta uk-margin-remove-top"><span uk-icon="icon: location"></span><%= bookmark.blog.user.address %></p>
                <p class="uk-text-meta uk-margin-remove-top"><i class="fas fa-teeth-open fa-2x"></i><%= bookmark.blog.user.orthodontics_type %></p>
                <p class="uk-text-meta uk-margin-remove-top"><i class="far fa-grimace fa-2x"></i> <%= bookmark.blog.user.teeth_type %></p>
              </div>
            </div>
          </div>
        </div>
        <div class="uk-card-media-top">
        <% if bookmark.blog.images.attached? %>
          <% bookmark.blog.images.each do |image| %>
          <%= image_tag image, class:"card-img-top", style:"height: 400px; width: 537px;" %>
          <% end %>
        <% end %>
        </div>
        <div class="uk-card-body">
          <p class="uk-text-left"><%= bookmark.blog.content %></p>
        </div>
        <div class="uk-card-footer">
          <%= link_to '詳細', blog_path(bookmark.blog.id), class:"uk-button uk-button-text" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <%= paginate @bookmarks, class:"" %>
</div>
