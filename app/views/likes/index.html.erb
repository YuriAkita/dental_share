<div class="article">
  <h1>いいね一覧</h1>
  <div class="uk-grid-match uk-child-width-1-3@m" uk-grid>
    <% @likes.each do |like| %>
    <div>
      <div class="uk-card uk-card-default uk-box-shadow-medium">
        <div class="uk-card-header">
          <div class="uk-grid-small uk-flex-middle" uk-grid>
            <div class="uk-width-auto">
              <% if like.review.user.profile_image.attached? %>
                <li class="user_image">
                <%= image_tag like.review.user.profile_image, class:"uk-border-circle", width:"70",height:"70" %>
              <% else %>
                <%= image_tag "defalt_profile_image.png", class:"uk-border-circle", width:"70",height:"70" %>
              <% end %>
            </div>
            <div class="uk-width-expand uk-grid-divider" uk-grid>
              <div class="center">
                <h3 class="uk-card-title uk-margin-remove-bottom"><%= link_to like.review.user.name, user_path(like.review.user.id), class:"uk-button uk-button-text" %></h3>
                <p class="uk-text-meta uk-margin-remove-top"><%= like.review.updated_at.to_date %></p>
              </div>
              <div class="uk-text-left">
                <p class="uk-text-meta uk-margin-remove-top"><span uk-icon="icon: location"></span><%= like.review.user.address %></p>
                <p class="uk-text-meta uk-margin-remove-top"><i class="far fa-grimace fa-2x"></i> <%= like.review.user.teeth_type %></p>
              </div>
            </div>
          </div>
        </div>
        <div class="uk-card-media-top">
        <% if like.review.images.attached? %>
          <% like.review.images.each do |image| %>
          <%= image_tag image, size: "200x200" %>
          <% end %>
        <% end %>
        </div>
        <div class="uk-card-body">
          <p class="uk-text-left">
            クリニック名：<%= like.review.clinic.name %><br>
            カウンセリング日:<%= l like.review.reservation_at %><br>
            見積もり金額：<%= like.review.quote_price %>万円<br>
            矯正方法：<%= like.review.orthodontics_type %><br>
            カウンセリング内容：<br><%= like.review.content %><br>
            スター:<%= like.review.star %></p>
          <li class="uk-text-baseline"><span uk-icon="comment"></span>  <%= like.review.review_comments.length %>  <span uk-icon="heart"></span>  <%= like.review.likes.length %></li><br>
        </div>
        <div class="uk-card-footer">
          <%= link_to '詳細', review_path(like.review.id), class:"select-btn", class:"uk-button uk-button-text" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <%= paginate @likes %>
</div>
