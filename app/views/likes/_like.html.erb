<% if user_signed_in? %>

  <% unless @review.like_user(current_user.id).blank? %>
    <%= link_to review_like_path(review_id: @review.id, id: @review.likes[0].id), method: :delete, class:"link-icon", remote: true do %>
      <i class="fas fa-heart"></i>
      <%= @review.likes.count %>
    <% end %>
  <% else %>
    <%= link_to review_likes_path(@review.id), method: :post, class:"link-icon", remote: true do %>
      <i class="far fa-heart"></i>
      <%= @review.likes.count %>
    <% end %>
  <% end %>
<% end %>
