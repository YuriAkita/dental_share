<%= form_with(model: @review, local: true ) do |form| %>

<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2><%= @review.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="field">
    <%= form.label :今の歯の状態画像 %><br>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div class="field">
    <%= form.label :クリニック名（プルダウンをクリックすると入力欄が表示されるので病院名を入力し選択してください） %><br>
    <%= javascript_pack_tag 'select2_controller' %>
    <%= form.select :clinic_id, options_for_select(Clinic.all.map{|clinic| [clinic.name, clinic.id]}), {}, class: 'mySelect2' %>
  </div>

  <div class="field">
    <%= form.label :カウンセリング日 %><br>
    <%= form.date_field :reservation_at, class:"input-field" %>
  </div>

  <div class="field">
    <%= form.label :見積もり金額 %><br>
    <%= form.number_field :quote_price, class:"input-field", placeholder:"金額を入力してください（60万円だったら60と入力）" %>万円
  </div>

  <div class="field">
    <%= form.label :歯科矯正方法 %><br>
    <%= form.select :orthodontics_type, Review.orthodontics_types.keys, {:include_blank => 'どの矯正方法でカウンセリングを受けたのか選択してください'}, class:"pulldown" %>
  </div>

  <div class="field">
    <%= form.label :カウンセリング内容 %><br>
    <%= form.text_area :content, class:"content-field", placeholder:"カウンセリング内容：病院の対応・どうゆう治療を勧められたのか・不安に思っている点で医師に相談した内容など、ご自由にご記入ください。" %>
  </div>

  <div class="field">
    <%= form.label :スター %><br>
    <%= form.select :star, Review.stars.keys, {:include_blank => '満足度を選択してください'}, class:"pulldown" %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id %>
  </div>

  <div class="actions">
    <%= form.submit "投稿する", class:"action-btn" %>
  </div>
<% end %>
