<%= form_with(model: @review, local: true ) do |form| %>

<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2><%= @review.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="field">
    <%= form.label :images %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div class="field">
    <%= form.label :clinic_id %>
    <%= javascript_pack_tag 'select2_controller' %>
    <%= form.select :clinic_id, options_for_select(Clinic.all.map{|clinic| [clinic.name, clinic.id]}), {include_blank: 'クリニック名をフォームへ入力してください'},  class: 'mySelect2' %>
  </div>

  <div class="field">
    <%= form.label :カウンセリング日 %><br>
    <%= form.date_field :reservation_at, class:"input-field" %>
  </div>

  <div class="field">
    <%= form.label :見積もり金額 %><br>
    <%= form.number_field :quote_price, class:"input-field" %>万円
  </div>

  <div class="field">
    <%= form.label :歯科矯正方法 %><br>
    <%= form.select :orthodontics_type, Review.orthodontics_types.keys, {:include_blank => true}, class:"pulldown" %>
  </div>

  <div class="field">
    <%= form.label :カウンセリング内容 %><br>
    <%= form.text_area :content, class:"content-field" %>
  </div>

  <div class="field">
    <%= form.label :スター %><br>
    <%= form.select :star, Review.stars.keys, {:include_blank => true}, class:"pulldown" %>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id %>
  </div>

  <div class="actions">
    <%= form.submit "投稿する", class:"action-btn" %>
  </div>
<% end %>
