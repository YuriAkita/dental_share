<% if @review.images.attached? %>
  <% @review.images.each do |image| %>
    <%= image_tag image %> <br>
  <% end %>
<% end %>

<p>
  <strong>Reservation at:</strong>
  <%= @review.reservation_at %>
</p>

<p>
  <strong>Quite price:</strong>
  <%= @review.quote_price %>
</p>

<p>
  <strong>orthodontics_type:</strong>
  <%= @review.orthodontics_type %>
</p>

<p>
  <strong>Content:</strong>
  <%= @review.content %>
</p>

<p>
  <strong>Star:</strong>
  <%= @review.star %>
</p>

<% unless @review.user_id == current_user.id %>
  <% if @like.present? %>
    <%= link_to 'お気に入り解除する', like_path(id: @like.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', likes_path(review_id: @review.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to 'Edit', edit_review_path(@review) %> |
<%= link_to 'Back', reviews_path %>
