<br><br><h1>口コミ一覧</h1>

<div class="search_field">
  <%= search_form_for @q, url: reviews_path do |f| %>
    <%= f.label :"地域別" %>
    <%= f.select :user_address_eq, User.addresses{|key,value| [User.addresses[key],value]}, {include_blank: true}, class:"pulldown-search" %>
    <%= f.label :"矯正方法別" %>
    <%= f.select :orthodontics_type_eq, Review.orthodontics_types{|key,value| [Review.orthodontics_types[key],value]}, {include_blank: true}, class:"pulldown-search" %>
    <%= f.label :"歯の悩み別" %>
    <%= f.select :user_teeth_type_eq, User.teeth_types{|key,value| [User.teeth_types[key],value]}, {include_blank: true}, class:"pulldown-search" %><br><br>
    <%= f.submit "検索", class:"action-btn" %>
  <% end %><br><br>
</div>

<%= link_to 'New Review', new_review_path, class:"red-btn" %>

<div class="article">
  <div class="row">
  <% @reviews.each do |review| %>
    <div class="article-area col-md-2">
      <li>
        <% if review.images.attached? %>
          <% review.images.each do |image| %>
          <%= image_tag image, size: "200x200" %>
          <% end %>
        <% end %>
      </li>
      <li>クリニック名：<%= review.clinic.name %></li>
      <li>カウンセリング日:<%= l review.reservation_at %></li>
      <li>見積もり金額：<%= review.quote_price %>万円</li>
      <li>矯正方法：<%= review.orthodontics_type %></li>
      <li>相談内容：<%= review.content %></li>
      <li>スター:<%= review.star %></li>
      <li><%= l review.updated_at %></li><br>
      <li class="user_image">
        <% if review.user.profile_image.attached? %>
        <%= image_tag review.user.profile_image, class:"rounded-circle", size: "100x100" %>
        <% end %>
      </li>
      <div class="user_parts">
        <li><%= review.user.name %></li>
        <li><%= review.user.address %></li>
        <li><%= review.user.teeth_type %></li>
      </div>
      <li>コメント数：<%= review.review_comments.length %>ブックマーク数<%= review.likes.length %></li><br>
      <li>
        <%= link_to '詳細', review, class:"select-btn" %>
        <%= link_to '編集', edit_review_path(review), class:"select-btn" %>
        <%= link_to '削除', review, method: :delete, data: { confirm: 'Are you sure?' }, class:"select-btn" %>
      </li>
    </div>
  <% end %>
</div>

<%= paginate @reviews %>
