<ul>
  <% blog_comments.each do |comment| %>
    <% if comment.id.present? %>
      <li>
        <div class="blog-comment-content" id ="this_blog_comment_<%= comment.id %>"></div>
        <p><%= comment.user.name %></p>
        <p><%= comment.content %></p>
        <p><%= comment.updated_at %></p>
        <p><%= link_to "編集", edit_blog_blog_comment_path(blog, comment), remote: true %></p>
        <p><%= link_to "削除", blog_blog_comment_path(comment.blog_id, comment.id), method: :delete, remote: true,
                                        data: { confirm: "本当に削除しますか?"} %></p>
      </li>
    <% end %>
  <% end %>
</ul>
